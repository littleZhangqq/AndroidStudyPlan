<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakePhoto">

    <TextView
        android:id="@+id/touchTophoto"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="图片dialog"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/touchtopicker"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="选择器dialog"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <ImageView
        android:id="@+id/photoImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/touchTophoto"
        >
    </ImageView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/touchTophoto"
        android:text="这里展示照片" />

    <TextView
        android:id="@+id/pickerResult"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/touchtopicker"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="这里展示日期" />
</RelativeLayout>